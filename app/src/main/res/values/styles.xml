<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TutorialTheme" parent="ShowcaseView">
        <item name="sv_backgroundColor">@color/colorTutorial</item>
        <item name="sv_showcaseColor">@color/colorTutorial</item>
        <item name="sv_buttonText">Next</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/TutorialTitle</item>
    </style>

    <style name="TutorialTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ForgeButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="ForgeButtonWithText" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ForgeItem">
        <item name="android:layout_marginBottom">@dimen/list_margin</item>
    </style>

    <style name="ForgeNonEditable" parent="Base.V7.Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textIsSelectable">true</item>
        <item name="android:inputType">none</item>
        <item name="android:editable">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="OverlayTitleBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">18sp</item>
        <item name="android:paddingTop">9sp</item>
        <item name="android:paddingBottom">9sp</item>
        <item name="android:textColor">@color/common_google_signin_btn_text_dark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
